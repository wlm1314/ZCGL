<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.bjprd.zcgl.main.MainViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/side_nav_bar"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:showIn="@layout/activity_main">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/side_nav_bar"
                      android:orientation="vertical"
                      android:padding="@dimen/margin_vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_vertical"
                android:src="@mipmap/icon_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_vertical"
                android:text="@{viewModel.username}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.company}"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@color/app_bg"
                      android:orientation="vertical"
                      android:padding="@dimen/margin_vertical">
            <TextView
                android:id="@+id/tv_home"
                style="@style/CommonText"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:drawableLeft="@mipmap/icon_home"
                android:drawablePadding="@dimen/dimen_10"
                android:text="首页"/>
            <TextView
                style="@style/CommonText"
                android:drawableLeft="@mipmap/icon_logout"
                android:drawablePadding="@dimen/dimen_10"
                android:text="退出登录"
                app:clickCommand="@{viewModel.logoutCommon}"/>

        </LinearLayout>

    </LinearLayout>
</layout>